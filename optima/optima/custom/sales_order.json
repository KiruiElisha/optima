{
    "custom_fields": {
        "Sales Order": [
            {
                "fieldname": "custom_send_to_optima",
                "fieldtype": "Check",
                "label": "Send to Optima",
                "insert_after": "order_type",
                "description": "Send this order to Optima system"
            },
            {
                "fieldname": "custom_optima_order",
                "fieldtype": "Link",
                "label": "Optima Order",
                "options": "Optima Order",
                "insert_after": "custom_send_to_optima",
                "read_only": 1
            },
            {
                "fieldname": "optima_sync_status",
                "fieldtype": "Select",
                "label": "Optima Sync Status",
                "options": "Not Synced\nPending\nSynced\nFailed",
                "default": "Not Synced",
                "insert_after": "custom_optima_order",
                "read_only": 1
            },
            {
                "fieldname": "optima_sync_error",
                "fieldtype": "Small Text",
                "label": "Optima Sync Error",
                "insert_after": "optima_sync_status",
                "read_only": 1,
                "hidden": 1
            }
        ]
    }
} 